--// Destroy old GUI if exists
pcall(function()
	if game.CoreGui:FindFirstChild("AntiLeaveBlocker") then
		game.CoreGui.AntiLeaveBlocker:Destroy()
	end
end)

--// Optional: Block top-left UI / prevent escape
local BLOCK_SIZE_X = 56
local BLOCK_SIZE_Y = 56
local BLOCK_POS_X  = 6
local BLOCK_POS_Y  = 6
local DISPLAY_ORDER = 10000

local CoreGui = game:GetService("CoreGui")
local RunService = game:GetService("RunService")

-- Try to block Roblox UI
local function tryHideRobloxMenu()
	pcall(function()
		local names = {"RobloxGui", "RobloxMenu", "Menu", "MenuGui", "Topbar", "TopBar"}
		for _, name in ipairs(names) do
			local g = CoreGui:FindFirstChild(name)
			if g then
				if g:IsA("ScreenGui") then
					g.Enabled = false
					for _, c in ipairs(g:GetChildren()) do
						pcall(function() c.Visible = false end)
						pcall(function() c.Enabled = false end)
					end
				end
			end
		end
	end)
end

-- Anti-leave overlay
local antiLeaveGui = Instance.new("ScreenGui", CoreGui)
antiLeaveGui.Name = "AntiLeaveBlocker"
antiLeaveGui.ResetOnSpawn = false
antiLeaveGui.IgnoreGuiInset = true
antiLeaveGui.DisplayOrder = DISPLAY_ORDER

local blockerFrame = Instance.new("Frame", antiLeaveGui)
blockerFrame.Size = UDim2.new(0, BLOCK_SIZE_X, 0, BLOCK_SIZE_Y)
blockerFrame.Position = UDim2.new(0, BLOCK_POS_X, 0, BLOCK_POS_Y)
blockerFrame.BackgroundTransparency = 1

local blocker = Instance.new("TextButton", blockerFrame)
blocker.Size = UDim2.new(1, 0, 1, 0)
blocker.BackgroundTransparency = 1
blocker.Text = ""
blocker.AutoButtonColor = false
blocker.Selectable = false
blocker.Active = true

RunService.RenderStepped:Connect(function()
	blockerFrame.Position = UDim2.new(0, BLOCK_POS_X, 0, BLOCK_POS_Y)
end)

spawn(function()
	while antiLeaveGui.Parent == CoreGui do
		tryHideRobloxMenu()
		wait(2)
	end
end)

-- SKIDDED BY SIGMA @rizzify101
-- SKIDDED BY SIGMA @rizzify101

--// Fullscreen Loading Overlay
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")
local player = Players.LocalPlayer

-- GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FullLoadingOverlay"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Global
screenGui.DisplayOrder = 999999
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Background
local bg = Instance.new("Frame", screenGui)
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(15, 15, 15)

-- Main Text
local mainText = Instance.new("TextLabel", bg)
mainText.AnchorPoint = Vector2.new(0.5, 0.5)
mainText.Position = UDim2.new(0.5, 0, 0.45, 0)
mainText.Size = UDim2.new(0, 600, 0, 80)
mainText.Text = "Loading..."
mainText.TextColor3 = Color3.new(1,1,1)
mainText.Font = Enum.Font.GothamBold
mainText.TextScaled = true
mainText.BackgroundTransparency = 1

-- Subtext
local subText = Instance.new("TextLabel", bg)
subText.AnchorPoint = Vector2.new(0.5, 0)
subText.Position = UDim2.new(0.5, 0, 0.55, 0)
subText.Size = UDim2.new(0, 400, 0, 40)
subText.Text = "Please wait while assets load..."
subText.TextColor3 = Color3.fromRGB(200, 200, 200)
subText.Font = Enum.Font.Gotham
subText.TextScaled = true
subText.BackgroundTransparency = 1

-- Progress Bar
local barFrame = Instance.new("Frame", bg)
barFrame.AnchorPoint = Vector2.new(0.5, 0)
barFrame.Position = UDim2.new(0.5, 0, 0.7, 0)
barFrame.Size = UDim2.new(0, 400, 0, 10)
barFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Instance.new("UICorner", barFrame).CornerRadius = UDim.new(0, 6)

local barFill = Instance.new("Frame", barFrame)
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
Instance.new("UICorner", barFill).CornerRadius = UDim.new(0, 6)

-- Blur
local blur = Instance.new("BlurEffect", Lighting)
blur.Size = 0
TweenService:Create(blur, TweenInfo.new(1.5), {Size = 20}):Play()

-- Messages
local messages = {
	"-- SKIDDED BY SIGMA @rizzify101 --",
	"Bypassing everything...",
	"Compiling Rayfield...",
	"Injecting fun...",
	"Setting up UI...",
	"Optimizing memory usage...",
	"Finalizing UI layout...",
	"Checking script integrity...",
	"Almost there...",
	"-- SKIDDED BY SIGMA @rizzify101 --"
}

local loopActive = true
task.spawn(function()
	while loopActive and screenGui.Parent do
		for _, msg in ipairs(messages) do
			mainText.TextTransparency = 1
			mainText.Text = msg
			local fadeIn = TweenService:Create(mainText, TweenInfo.new(0.5), {TextTransparency = 0})
			local fadeOut = TweenService:Create(mainText, TweenInfo.new(0.5), {TextTransparency = 1})
			fadeIn:Play()
			fadeIn.Completed:Wait()
			wait(2.2)
			fadeOut:Play()
			fadeOut.Completed:Wait()
		end
	end
end)

-- Progress bar animation
local loadDuration = 120 -- seconds (2 minutes)
TweenService:Create(barFill, TweenInfo.new(loadDuration), {
	Size = UDim2.new(1, 0, 1, 0)
}):Play()

wait(loadDuration)
loopActive = false

-- Fade out GUI
local fadeTime = 1.5
TweenService:Create(bg, TweenInfo.new(fadeTime), {BackgroundTransparency = 1}):Play()
TweenService:Create(mainText, TweenInfo.new(fadeTime), {TextTransparency = 1}):Play()
TweenService:Create(subText, TweenInfo.new(fadeTime), {TextTransparency = 1}):Play()
TweenService:Create(barFrame, TweenInfo.new(fadeTime), {BackgroundTransparency = 1}):Play()
TweenService:Create(barFill, TweenInfo.new(fadeTime), {BackgroundTransparency = 1}):Play()
TweenService:Create(blur, TweenInfo.new(fadeTime), {Size = 0}):Play()

wait(fadeTime + 0.5)

-- Clean up
blur:Destroy()
screenGui:Destroy()

-- SKIDDED BY SIGMA @rizzify101
